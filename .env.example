# Environment Configuration
# Copy this file to .env and update values for your environment

# Environment: development or production
ENVIRONMENT=development

# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./underwriting.db
DATABASE_PATH=storage/underwriting.db

# API Configuration
API_TITLE=Agentic Quote-to-Underwrite API
API_VERSION=1.0.0

# CORS Configuration
# Development: Use wildcards
CORS_ORIGINS=["*"]
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Production: Restrict to specific domains
# CORS_ORIGINS=["https://your-frontend.com", "https://admin.your-frontend.com"]
# CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
# CORS_ALLOW_HEADERS=["Content-Type", "Authorization", "X-API-Key"]

# RAG Configuration
CHROMA_PATH=./storage/chroma_db
DATA_DIRECTORY=data/guidelines

# Server Configuration
HOST=0.0.0.0
PORT=8000
