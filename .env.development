# Development Environment Configuration
ENVIRONMENT=development

# API Keys (for development - use test keys)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./underwriting.db
DATABASE_PATH=storage/underwriting.db

# API Configuration
API_TITLE=Agentic Quote-to-Underwrite API (Development)
API_VERSION=1.0.0

# CORS Configuration - Permissive for development
CORS_ORIGINS=["*"]
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
CORS_ALLOW_CREDENTIALS=true

# RAG Configuration
CHROMA_PATH=./storage/chroma_db
DATA_DIRECTORY=data/guidelines

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Development-specific settings
DEBUG=true
LOG_LEVEL=debug
