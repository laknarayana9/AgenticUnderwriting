# Production Environment Configuration
ENVIRONMENT=production

# API Keys (for production - use real keys)
OPENAI_API_KEY=your_production_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./underwriting.db
DATABASE_PATH=storage/underwriting.db

# API Configuration
API_TITLE=Agentic Quote-to-Underwrite API (Production)
API_VERSION=1.0.0

# CORS Configuration - Restricted for security
CORS_ORIGINS=["https://your-frontend.com", "https://admin.your-frontend.com", "https://api.your-frontend.com"]
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["Content-Type", "Authorization", "X-API-Key"]
CORS_ALLOW_CREDENTIALS=true

# RAG Configuration
CHROMA_PATH=./storage/chroma_db
DATA_DIRECTORY=data/guidelines

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Production-specific settings
DEBUG=false
LOG_LEVEL=info
